{
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./src",
        "rootDir": "./src",
        "lib": ["es5", "es6"],
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "inlineSources": true,
        "strictPropertyInitialization": false
    },
    "include": ["src/**/*"],
    "exclude": ["jest.config.ts", "./dist", "./node_modules"]
}
